[core]
	# Use VS code as editor
	editor = code --wait
	# Use diff-so-fancy for diffs
	pager = diff-so-fancy | less --tabs=4 -RFX

[interactive]
	# Use diff-so-fancy for diffs
	diffFilter = diff-so-fancy --patch

[gc]
	# Don't run garbage collector in background
	autoDetach = false

[alias]
	c = commit --verbose
	can = commit --amend --no-edit
	d = diff
	fc = fetch changes
	fd = !bash -ic 'git-fuzzy-diff \"$@\"' x
	fl = !bash -ic 'git-fuzzy-log \"$@\"' x
	# Modify standard git log output:
	# - print author and date in dim white
	# - use ISO 8601 date format
	l = log --pretty=format:'%C(yellow)commit %H%C(reset)%C(auto)%d%C(reset)\
		\n%C(dim white)Author: %an <%ae>%C(reset)\
		\n%C(dim white)Date:   %ai%C(reset)\
		\n\n%C(white)%w(80,4,4)%s\
		\n\n%w(80,4,4)%b%-C()%n%C(reset)'
	ll = log --oneline --pretty=format:'%C(yellow)%h%C(reset)  %C(white)%s%C(reset)%C(auto)%d%C(reset) %C(dim white) %an, %ar%C(reset)'
	# Bypass diff-so-fancy
	patch = !git --no-pager diff
	p = pull --prune
	s = status

[tig "color"]
	title-blur = 0 7 bold
	title-focus = 0 7 bold
	cursor = default 237 bold

[diff-so-fancy]
	markEmptyLines = false

[color "diff-highlight"]
	oldNormal = red
	oldHighlight = red
	newNormal = green
	newHighlight = green

[color "diff"]
	old = red
	new = green

[include]
	# Allow local customizations in the .gitconfig_local file
	path = ~/.gitconfig_local
